<div id='wrap'>
  <script>
    Include('/hbs/layout/Header_1-a.hbs');
  </script>
  <div class='wrap'>
    <div class='content flex justify-between'>
      <script>Include('/hbs/layout/Lnb_1-a.hbs');</script>
      <div class='content-wrap'>
        <div class='content-inner text-xs shadow-lg'>
          <script>Include('/hbs/component/TitleBox_1-a.hbs');</script>
          <div class='p-7'>
            <!-- 검색 조건 -->
            <div class='tit-box'><h3>검색 조건</h3></div>
            <div class='tbl-box'>
              <table class='table' >

                <colgroup>
                  <col style='width:20%' />
                  <col style='width:80%' />
                </colgroup>
                <tbody>
                  <tr>
                    <th scope='row'>검색어</th>
                    <td>
                      <select class='select-wrap !w-[147px]'>
                        <option>선택</option>
                        <option>아이디</option>
                        <option>이름</option>
                        <option>닉네임</option>
                        <option>이메일</option>
                        <option>휴대폰번호</option>
                      </select>
                      <input type='text' class='input-wrap' placeholder='placeholder' />
                      <button type='button' class='btn-m'>검색</button>
                      <button type='button' class='btn-white-m'>초기화</button>
                    </td>
                  </tr>
                  <tr>
                    <th scope='row'>휴면 회원 전환 기간</th>
                    <td>
                      <span class='input-calendar-wrap'>
                        <button type='button' class='btn-calender'><span class='icon-calender inline-block w-[14px] h-[14px] bg-icon-calender bg-center bg-no-repeat'></span></button>
                        <input type='text' class='inline-block float-right w-[76px] h-[38px]' />
                      </span>
                      <span class='inline-block px-1'>~</span>
                      <span class='input-calendar-wrap'>
                        <button type='button' class='btn-calender'><span class='icon-calender inline-block w-[14px] h-[14px] bg-icon-calender bg-center bg-no-repeat'></span></button>
                        <input type='text' class='inline-block float-right w-[76px] h-[38px]' />
                      </span>
                      <div class='period-tab'>
                        <label class='label'>
                          <input type='radio' name='period' />
                          <span class='label-text'>오늘</span>
                        </label>
                        <label class='label'>
                          <input type='radio' name='period' />
                          <span class='label-text'>7일</span>
                        </label>
                        <label class='label'>
                          <input type='radio' name='period' />
                          <span class='label-text'>15일</span>
                        </label>
                        <label class='label'>
                          <input type='radio' name='period' />
                          <span class='label-text'>1개월</span>
                        </label>
                        <label class='label'>
                          <input type='radio' name='period' />
                          <span class='label-text'>3개월</span>
                        </label>
                        <label class='label'>
                          <input type='radio' name='period' checked='' />
                          <span class='label-text'>전체</span>
                        </label>
                      </div>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
            <!-- //검색 조건 -->
            <!-- 휴면 회원 리스트 -->
            <div class='tit-box mt-10'><h3>휴면 회원 리스트</h3></div>
            <div class='sorting-box flex justify-between my-3'>
              <div class='left-box'>
                <span class='inline-block mt-6'>검색 <span class='text-red'>0</span>명 / 전체 <span class='text-red'>0</span>명</span>
              </div>
              <div class='right-box'>
                <select class='select-wrap'>
                  <option>10개씩 보기</option>
                  <option>20개씩 보기</option>
                  <option>30개씩 보기</option>
                  <option>50개씩 보기</option>
                  <option>100개씩 보기</option>
                  <option>150개씩 보기</option>
                  <option>200개씩 보기</option>
                  <option>300개씩 보기</option>
                  <option>500개씩 보기</option>
                  <option>1000개씩 보기</option>
                  <option>5000개씩 보기</option>
                </select>
              </div>
            </div>
            <div class='mt-1' id='app'></div>
            <div class='mt-1'>
              <span class='inline-block mr-1'>* 선택 회원 </span>
              <button type='button' class='btn-m'>탈퇴 처리</button>
              <button type='button' class='btn-white-m'>전체 탈퇴 처리</button>
            </div>
            <!-- //휴면 회원 리스트 -->
            <!-- 휴면 회원 관리 정책 -->
            <div class='tit-box mt-10'><h3>휴면 회원 관리 정책</h3></div>
            <div class='tbl-box'>
              <table class='table' >

                <colgroup>
                  <col style='width:20%' />
                  <col style='width:80%' />
                </colgroup>
                <tbody>
                  <tr>
                    <th scope='row'>일반 회원 전환 방법</th>
                    <td>
                      <label class='label block mb-1'>
                        <input type='radio' name='regular_member_convert' checked='' />
                        <span class='label-text'>즉시 일반 회원 전환</span>
                      </label>
                      <label class='label block mb-1'>
                        <input type='radio' name='regular_member_convert' />
                        <span class='label-text'>본인 인증 후 일반 회원 전환</span>
                        <span class='ml-5'>
                          (
                          <label class='label mr-5'>
                            <input type='checkbox' name='regular_member_convert_method' checked='' />
                            <span class='label-text'>휴대폰번호</span>
                          </label>
                          <label class='label mr-5'>
                            <input type='checkbox' name='regular_member_convert_method' />
                            <span class='label-text'>이메일</span>
                          </label>
                          <label class='label'>
                            <input type='checkbox' name='regular_member_convert_method' />
                            <span class='label-text'>본인 인증</span>
                          </label>
                          )
                        </span>
                      </label>
                    </td>
                  </tr>
                  <tr>
                    <th scope='row'>회원 등급 유지</th>
                    <td>
                      <label class='label block mb-1'>
                        <input type='radio' name='member_grade_maintain' checked='' />
                        <span class='label-text'>전환 전 등급 유지</span>
                      </label>
                      <label class='label block mb-1'>
                        <input type='radio' name='member_grade_maintain' />
                        <span class='label-text'>기본 (최하위) 등급으로 변경</span>
                      </label>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
            <!-- //휴면 회원 관리 정책 -->
            <div class='mt-7 text-right'>
              <button type='button' class='btn-blue'>저장</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script>
    Include('/hbs/layout/Footer_1-a.hbs');
  </script>
</div>